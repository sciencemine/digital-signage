<div class="model-select">
  <div class="model-select--title page-header">
    <h1>Exhibit Selection <small>Select an exhibit to edit below</small></h1>
  </div>
  <div class="model-select--panel panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Select an exhibit</h3>
    </div>

    <ul class="list-group">
      {{#each-in model as |key value|}}
        {{model-select-element tagName='li' class="list-group-item model-select--element" modelfile=value.fileName name=value.config.prettyName description=value.config.description}}
      {{/each-in}}
      {{model-select-element tagName='li' class="list-group-item model-select--element" modelfile="ModelSkeleton" name="Add Exhibit" description="Creates a new exhibit to be added to the list"}}
    </ul>
  </div>
</div>
