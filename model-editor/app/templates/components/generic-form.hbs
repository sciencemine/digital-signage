{{#if showTitle}}
  <h3>{{config.displayName}}<small> {{config.help}}</small></h3>
{{/if}}

<form class="form-{{if isInline 'inline' 'horizontal'}}" onsubmit={{action 'submitForm'}}>
  <button {{action 'toggleHelp'}} type="button" class="btn btn-info btn-sm">Turn help {{if showHelp "off" "on"}}</button><br>

  {{#unless isInline}}<br>{{/unless}}

  {{form-contents prefix=prefix isInLine=isInline showHelp=showHelp showList=showList updateModalCallback=(if updateModalCallback updateModalCallback null) editRelationCallback=(if editRelationCallback editRelationCallback null) noLabel=noLabel data=data config=config tagName=''}}

  {{#if isInline}}<br><br>{{/if}}

  <button type="submit" class="btn btn-success btn-sm">Submit {{title}}</button>
</form>
