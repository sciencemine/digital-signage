<div id="attribute-panel" data-spy="scroll" data-target="#attributeNav" class="panel panel-info {{if expanded 'attribute-panel--scrollable'}}">
  <div {{action 'toggleView' on click}} class="attribute-panel--header panel-heading unselectable">
    <h4 class="panel-title">Attributes <small>Scroll me<br>Click to {{if expanded "hide" "show"}} <span class="glyphicon glyphicon-chevron-{{if expanded 'up' 'down'}}" /></small></h4>
  </div>

  {{#if expanded}}
    <div class="panel-body">
      <p>List of attributes in the exhibit. Drag an attribute onto a video to add it or select the "Add Attribute" button to the right to add a new one.</p>
    </div>

    <nav class="attribute-navbar navbar">
      <p class="navbar-text">Click icons to navigate to specific attributes</p>
      <div class="collapse navbar-collapse" id="attributeNav">
        <ul class="nav navbar-nav">
          {{#each-in data as |key value|}}
            <li data-toggle="attributeTooltip" title={{value.prettyName}}><a href={{create-id "#" prefix "_" key}}><span class="glyphicon glyphicon-picture"/></a></li>
          {{/each-in}}
        </ul>
      </div>
    </nav>

    <ul class="list-group attribute-list">
      {{#each-in data as |key value|}}
        {{attribute-list-item deleteAttributeCallback=deleteAttributeCallback updateModalCallback=(action 'editAttribute') id=(create-id prefix "_" key) key=key tagName='li' class="list-group-item container-fluid unselectable pointer" data=value}}
      {{/each-in}}
    </ul>
  {{/if}}
</div>
