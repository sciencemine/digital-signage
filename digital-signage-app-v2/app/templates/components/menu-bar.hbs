<div class="{{menuBarStyle}}">
  {{#if renderMenu}}
    {{#video-list
      onSelectedCallback=(action 'videoClicked')
      onInputCallback=(action 'doNothing')
      onHoverCallback=(action 'doNothing')
      class=menuListStyle 
      istItemClass="video-list-item--flex__menu"
      listItemSmall="video-list-item--flex__small__menu"
      listItemSelected="video-list-item--selected__menu"
      listItemHighlight="blue-border"
      muted=true
      videos=displayVideos
      modelIdentifier=config.modelIdentifier
      }}
      <div>
        <span class="filter-label">
          {{filterType}}
        </span>
        <br>
        <div class="btn-group {{if useDropUp "dropup"}} menu-bar--dropdown">
          <button {{action 'setMenuVideos' -1}} type="button" class="btn btn-sm btn-info">All</button>
          <button type="button" class="btn btn-sm btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
          </button>

          <ul class="dropdown-menu">
            <li class="dropdown-header menu-bar--list--element--border">Filter Videos</li>
            {{#each-in attributes as |key value|}}
              <li data-container="body" data-toggle="popover" data-placement="auto right" data-title={{value.prettyName}} data-content={{value.description}} class="menu-bar--list--element menu-bar--list--element--border">
                <span {{action 'setMenuVideos' key}}>
                  {{value.prettyName}}
                </span>
              </li>
            {{/each-in}}
          </ul>
        </div>
      </div>
    {{/video-list}}
  {{/if}}
</div>
{{yield}}
